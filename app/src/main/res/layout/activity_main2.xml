<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_5"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/img_7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_1" />

        <EditText
            android:id="@+id/edittext_register_ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edittext"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:hint="请输入账号"
            android:textColor="#fff"
            android:maxLines="1"
            android:maxLength="15"
            android:textSize="12sp"
            android:textColorHint="#C2E9FF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginTop="7dp"
            android:src="@drawable/img_2" />

        <EditText
            android:id="@+id/edittext_register_password1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edittext"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:hint="请输入密码"
            android:maxLength="15"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColorHint="#C2E9FF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginTop="7dp"
            android:src="@drawable/img_2" />

        <EditText
            android:id="@+id/edittext_register_password2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edittext"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:hint="请输入再次密码"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:maxLines="1"
            android:maxLength="15"
            android:textSize="12sp"
            android:textColorHint="#C2E9FF"/>
    </LinearLayout>


    <Button
        android:id="@+id/button_register"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/shape_button"
        android:text="注册"
        android:textColor="#000000"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>